<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="shipping">
            <group id="rates_collector" translate="label" type="text" sortOrder="1000" showInDefault="1" showInWebsite="1">
                <label>Rates Collector</label>
                <field id="use_inventory_source_origin" translate="label comment" type="select" sortOrder="10" showInDefault="1" canRestore="1">
                    <label>Use Inventory Source Origin</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>For the shipping rates calculation, replace origin address with the product's inventory source address.</comment>
                </field>
            </group>
        </section>
    </system>
</config>

